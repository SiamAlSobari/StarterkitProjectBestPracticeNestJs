generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
}


enum Role {
  User
  Admin
}

model User {
  id            String    @id @default(uuid()) // sudah otomatis jadi PK index
  email         String    @unique // sudah otomatis ada unique index
  hash_password String
  role          Role      @default(User)
  is_verified   Boolean   @default(false)
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
  last_login    DateTime?

  profile            Profile?            @relation("OneToOne")
  verificationEmails VerificationEmail[]

  // index tambahan yang benerÂ² dipakai
  @@index([is_verified]) // cek cepat siapa yg sudah/belum verif
  @@index([role]) // filter cepat berdasarkan role
}

model VerificationEmail {
  id         String   @id @default(uuid())
  user_id    String
  token      String   @unique // sudah otomatis ada unique index
  expires_at DateTime
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id]) // cari token by user
}

model Profile {
  id         String   @id @default(uuid()) // otomatis jadi PK index
  user_id    String   @unique // sudah otomatis ada unique index
  first_name String
  last_name  String
  avatar_url String   @default("https://static.vecteezy.com/system/resources/thumbnails/003/337/584/small_2x/default-avatar-photo-placeholder-profile-icon-vector.jpg")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user       User     @relation("OneToOne", fields: [user_id], references: [id], onDelete: Cascade)
}